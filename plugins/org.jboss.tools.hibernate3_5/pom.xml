<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion> 
	<parent>
		<groupId>org.jboss.tools.hibernatetools</groupId>
		<artifactId>plugins</artifactId>
		<version>3.8.0-SNAPSHOT</version>
	</parent>
	<groupId>org.jboss.tools.hibernatetools.plugins</groupId>
	<artifactId>org.jboss.tools.hibernate3_5</artifactId> 
	
	<packaging>eclipse-plugin</packaging>
	
   <properties>
      <version.hibernate-core>3.5.6-Final</version.hibernate-core>
      <version.hibernate-tools>3.4.0.CR2</version.hibernate-tools>
      <version.slf4j-log4j12>1.5.8</version.slf4j-log4j12>
      <version.cglib>2.2</version.cglib>
      <version.commons-logging>1.0.4</version.commons-logging>
   </properties>

   <build>
      <plugins>
         <plugin>
            <artifactId>maven-clean-plugin</artifactId>
            <executions>
               <execution>
                  <id>clean-build-libs</id>
                  <phase>clean</phase>
                  <goals>
                     <goal>clean</goal>
                  </goals>
                  <inherited>false</inherited>
                  <configuration>
                     <filesets>
                        <fileset>
                           <directory>${basedir}/lib</directory>
                           <followSymlinks>false</followSymlinks>
                        </fileset>
                     </filesets>
                  </configuration>
               </execution>
            </executions>
         </plugin>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
               <execution>
                  <id>get-runtime</id>
                  <goals>
                     <goal>copy</goal>
                  </goals>
                  <phase>generate-resources</phase>
                  <configuration>
                     <artifactItems>
                        <artifactItem>
                           <groupId>org.hibernate</groupId>
                           <artifactId>hibernate-core</artifactId>
                           <version>${version.hibernate-core}</version>
                           <destFileName>hibernate-core-${version.hibernate-core}.jar</destFileName>
                        </artifactItem>
                        <artifactItem>
                           <groupId>org.hibernate</groupId>
                           <artifactId>hibernate-tools</artifactId>
                           <version>${version.hibernate-tools}</version>
                           <destFileName>hibernate-tools-${version.hibernate-tools}.jar</destFileName>
                        </artifactItem>
                        <artifactItem>
                           <groupId>org.slf4j</groupId>
                           <artifactId>slf4j-log4j12</artifactId>
                           <version>${version.slf4j-log4j12}</version>
                           <destFileName>slf4j-log4j12-${version.slf4j-log4j12}.jar</destFileName>
                        </artifactItem>
                        <artifactItem>
                           <groupId>cglib</groupId>
                           <artifactId>cglib</artifactId>
                           <version>${version.cglib}</version>
                           <destFileName>cglib-${version.cglib}.jar</destFileName>
                        </artifactItem>
                        <artifactItem>
                           <groupId>commons-logging</groupId>
                           <artifactId>commons-logging</artifactId>
                           <version>${version.commons-logging}</version>
                           <destFileName>commons-logging-${version.commons-logging}.jar</destFileName>
                        </artifactItem>
                     </artifactItems>
                     <skip>false</skip>
                     <outputDirectory>${basedir}/lib</outputDirectory>
                  </configuration>
               </execution>
            </executions>
         </plugin>
      </plugins>
      <pluginManagement>
         <plugins>
            <!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself. -->
            <plugin>
               <groupId>org.eclipse.m2e</groupId>
               <artifactId>lifecycle-mapping</artifactId>
               <version>1.0.0</version>
               <configuration>
                  <lifecycleMappingMetadata>
                     <pluginExecutions>
                        <pluginExecution>
                           <pluginExecutionFilter>
                              <groupId>
                                 org.apache.maven.plugins
                              </groupId>
                              <artifactId>
                                 maven-dependency-plugin
                              </artifactId>
                              <versionRange>
                                 [2.4,)
                              </versionRange>
                              <goals>
                                 <goal>unpack</goal>
                                 <goal>copy</goal>
                              </goals>
                           </pluginExecutionFilter>
                           <action>
                              <ignore></ignore>
                           </action>
                        </pluginExecution>
                     </pluginExecutions>
                  </lifecycleMappingMetadata>
               </configuration>
            </plugin>
         </plugins>
      </pluginManagement>
   </build>	
	
</project>
